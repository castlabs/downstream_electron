{
  "name": "redux",
  "author": {
    "name": "Bartek Makowski",
    "email": "bartek.makowski@castlabs.com",
    "url": "https://castlabs.com"
  },
  "version": "0.2.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "devDependencies": {
    "@rescripts/cli": "^0.0.16",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^8.2.1",
    "electron": "git+https://github.com/castlabs/electron-releases.git#v26.2.2+wvcus",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^2.2.4",
    "typescript": "^4.1.6",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "downstream-electron": "git+https://github.com/mackode/downstream_electron.git",
    "electron-is-dev": "^2.0.0",
    "electron-redux": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-scripts": "^4.0.3",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "shaka-player": "^4.5.0"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "dev": "concurrently --kill-others \"NODE_OPTIONS=\"--openssl-legacy-provider\" BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder build --mac --win --publish never",
    "dist": "npm run pack && electron-builder"
  },
  "build": {
    "appId": "com.castlabs.DOWNstream.redux",
    "productName": "DOWNstream Redux",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}