{
  "name": "downstream-electron",
  "version": "0.4.0",
  "description": "DOWNstream For Electron - an open-source plugin to use with Electron allowing encrypted MPEG-DASH and Smooth Streaming streams to be safely downloaded and stored locally on a userâ€™s Windows or Mac computer.",
  "keywords": [
    "electron",
    "download",
    "offline",
    "video",
    "streaming",
    "dash",
    "dash+xml",
    "smoothstreaming",
    "smooth streaming",
    "vnd.ms-sstr+xml",
    "mpeg",
    "drm",
    "storage",
    "files"
  ],
  "main": "api/index.js",
  "files": [
    "api"
  ],
  "homepage": "https://castlabs.com/open-source/downstream/",
  "scripts": {
    "build": "webpack",
    "package": "npm pack",
    "clean": "node ./bin/makefile.js clean",
    "eslint": "./node_modules/.bin/eslint api",
    "jsdoc": "./node_modules/.bin/jsdoc api -r --readme api/README.md --configure jsdoc.conf.json -d jsdoc",
    "jsdoc_prv": "./node_modules/.bin/jsdoc api -r -p --readme api/README.md --configure jsdoc.conf.json -d jsdoc",
    "jasmine": "(npm run jasmine_test || true) && npm run jasmine_report",
    "jasmine_test": "./node_modules/jasmine-node/bin/jasmine-node units/ --junitreport --output tmp/units",
    "jasmine_report": "./node_modules/junit-viewer/bin/junit-viewer --results=tmp/units --save=tmp/units_result.html",
    "start": "electron app.js",
    "travis-build": "npm run eslint && npm run jasmine_test && npm run build && npm run jsdoc && true"
  },
  "author": "castlabs GmbH",
  "maintainers": [
    {
      "name": "Bartlomiej Makowski",
      "email": "bartek.makowski@gmail.com"
    },
    {
      "name": "Bartlomiej Obecny",
      "email": "bobecny@gmail.com"
    }
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "babel-core": "6.26.3",
    "babel-loader": "8.0.6",
    "babel-preset-env": "1.7.0",
    "clean-webpack-plugin": "3.0.0",
    "electron": "git+https://github.com/castlabs/electron-releases.git#v6.0.0-wvvmp",
    "eslint": "^6.6.0",
    "jasmine-node": "3.0.0",
    "jquery": "3.4.1",
    "jsdoc": "3.6.3",
    "jsdoc-webpack-plugin": "0.2.0",
    "junit-viewer": "4.11.1",
    "shaka-player": "2.5.6",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "base64-js": "1.3.1",
    "biguint-format": "1.0.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "flake-idgen": "1.1.2",
    "fs-extra": "8.1.0",
    "get-folder-size": "^2.0.1",
    "jsonfile": "5.0.0",
    "mkdirp": "^0.5.1",
    "moment": "2.24.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "underscore": "1.9.1",
    "url-parse": "1.4.7",
    "xmldom": "0.1.27"
  }
