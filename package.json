    "flake-idgen": "1.1.0",
    "fs-extra": "6.0.1",
    "jsonfile": "4.0.0",
    "mkdirp": "0.5.1",
    "moment": "2.22.2",
    "underscore": "1.9.1",
    "url-parse": "1.4.1",
